<div class="auth-background2">
    <div class="auth-card">
        <h2>Crear cuenta</h2>
        <form action="/user/register" method="POST">
            <label>Nombre</label>
            <input type="text" name="name" required placeholder="Ingresa tu nombre">
            <label>Apellido</label>
            <input type="text" name="lastname" required placeholder="Ingresa tu apellido">
            <label>Dirección</label>
            <input type="text" name="address" required placeholder="Tu dirección completa">
            <label>Correo electrónico</label>
            <input type="email" name="mail" required placeholder="usuario@correo.com">
            <label>Contraseña</label>
            <input type="password" name="password" required placeholder="Crea una contraseña segura">
            <button type="submit">Registrarse</button>
            <p>¿Ya tienes una cuenta? <a href="/user/login">Inicia sesión</a></p>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% if (typeof success !== 'undefined' && success) { %>
    <script>
    Swal.fire({
        title: '¡Registro exitoso!',
        text: '<%= success %>',
        icon: 'success',
        timer: 3000,
        showConfirmButton: false
    }).then(() => {
        window.location.href = '/user/login';
    });
    </script>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
    <script>
    Swal.fire({
        title: 'Error',
        text: '<%= error %>',
        icon: 'error',
        confirmButtonText: 'Intentar de nuevo'
    });
    </script>
<% } %>









